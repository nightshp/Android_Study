<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/video_classic_background">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="310px"
        android:layout_height="410px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="true"
        android:background="@drawable/img_selector">

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="300px"
            android:layout_height="400px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/colorWhite"
            android:text="xxx" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellow"
                android:textSize="20px"
                android:text="xxx" />

            <TextView
                android:id="@+id/tv_area_time_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textColor="@color/colorGray"
                android:textSize="20px"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="20px"
            android:layout_marginTop="10dp"
            android:text="xxxx" />

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_marginTop="10dp"
            android:textSize="20px"
            android:text="xxxx" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="播放"
            android:textSize="20dp"
            android:background="@drawable/color_btn_selector"
            android:focusable="true" />

    </LinearLayout>


</RelativeLayout>