<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radioButton_theme">
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:textColor">@color/color_radiobtn_selector</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="menuAnimation">
        <item name="android:windowEnterAnimation">@anim/enters</item>
        <item name="android:windowExitAnimation">@anim/exits</item>
    </style>
</resources>
