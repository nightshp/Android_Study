<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <FrameLayout
        android:id="@+id/fl_recommend_item"
        android:layout_width="156px"
        android:layout_height="210px"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:background="@drawable/img_selector"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_recommend_item"
            android:layout_width="150px"
            android:layout_height="200px"
            android:layout_marginTop="3px"
            android:layout_marginLeft="3px"
            android:src="@mipmap/video_classic_background"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_recommend_item"
            android:layout_width="150px"
            android:layout_height="20px"
            android:layout_marginTop="180px"
            android:layout_marginLeft="3px"
            android:textColor="@color/colorBlackDark"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:alpha="0.6"
            android:textSize="16sp" />
    </FrameLayout>


</FrameLayout>