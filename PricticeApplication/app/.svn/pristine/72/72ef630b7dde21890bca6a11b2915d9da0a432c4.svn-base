<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/video_classic_background">

<LinearLayout
    android:layout_width="1100px"
    android:layout_height="616px"
    android:background="@drawable/linearlayout_shap"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/tv_introduce_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/colorGrayWhite"
        android:layout_marginTop="47px"
        android:layout_marginLeft="69px"
        />
    <TextView
        android:id="@+id/txt_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="27px"
        android:background="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_introduce_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:textSize="24sp"
        android:textColor="@color/colorGrayWhite"
        />



</LinearLayout>

</RelativeLayout>