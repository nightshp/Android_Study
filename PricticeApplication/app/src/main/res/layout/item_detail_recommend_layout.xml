<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/fl_recommend_item"
        android:layout_width="142px"
        android:layout_height="230px"
        android:layout_marginTop="15px"
        android:layout_marginRight="38px"
        android:layout_marginLeft="5px"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_recommend_item"
            android:layout_width="132px"
            android:layout_height="178px"
            android:padding="3px"
            android:background="@drawable/img_selector"
            android:scaleType="fitXY"
            android:src="@mipmap/video_classic_background" />

        <TextView
            android:id="@+id/tv_recommend_item"
            android:layout_width="132px"
            android:layout_height="wrap_content"
            android:layout_marginTop="180px"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/colorGrayWhite"
            android:textSize="21sp" />

    </FrameLayout>


</FrameLayout>