<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:layout_height="348dp"
    >

    <FrameLayout
        android:id="@+id/fl_video"
        android:layout_width="205dp"
        android:layout_height="348dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">


        <ImageView
            android:id="@+id/iv_video_list"
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:paddingLeft="3dp"
            android:paddingTop="2dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_video_score"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/text_score_shap"
            android:alpha="0.7"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:textColor="@color/colorBlackDark"
            android:background="@color/colorWhite"
            android:alpha="0.7"
            android:layout_marginTop="270dp"
            android:visibility="invisible"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            />

        <TextView
            android:id="@+id/tv_video_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="305dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            />


        <lunzn.com.pricticeapplication.views.FocusBoundImageView
            android:id="@+id/fbiv_video"
            android:layout_width="205dp"
            android:layout_height="285dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
    </FrameLayout>


</FrameLayout>